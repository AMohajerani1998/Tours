header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
        form.nav__search
            button.nav__search-btn
                svg
                    use(xlink:href='/img/icons.svg#icon-search')
            input.nav__search-input(type='text' placeholder='Search tours')
    .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user 
        if user
            a(href='/my-tours').nav__el My bookings
            a.nav__el.nev__el--logout Log out
            a.nav__el
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.name}`)
                a.nav__el(href='/me')= user.name.split(' ')[0]
        else
            a(href='/login').nav__el Log in
            a(href='/sign-up').nav__el.nav__el--cta Sign up